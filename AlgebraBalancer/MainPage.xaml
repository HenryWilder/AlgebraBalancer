<Page
    x:Class="AlgebraBalancer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlgebraBalancer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="InputBox" InputScope="Number" TextChanged="Factor" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="18,0,18,0"/>
        <TextBlock FontSize="24" VerticalAlignment="Center" Grid.Column="1">⋉</TextBlock>
        <Grid Grid.Column="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ResultBoxLeft"  Grid.Column="0" FontSize="24" Text="..." HorizontalAlignment="Left" HorizontalTextAlignment="Right" Margin="18,0,18,0"/>
            <TextBlock x:Name="ResultBoxTimes" Grid.Column="1" FontSize="24" Text="×"   HorizontalAlignment="Left" HorizontalTextAlignment="Right"/>
            <TextBlock x:Name="ResultBoxRight" Grid.Column="2" FontSize="24" Text="..." HorizontalAlignment="Left" HorizontalTextAlignment="Right" Margin="18,0,18,0"/>
        </Grid>
    </Grid>
</Page>
