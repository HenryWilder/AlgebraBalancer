<Page
    x:Class="AlgebraBalancer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AlgebraBalancer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="650"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">

    <Grid ColumnSpacing="9" RowSpacing="9" Padding="9">
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" FontSize="11" Text="© 2023 Henry Wilder"/>
        <Grid Grid.Column="0" Grid.Row="1" RowSpacing="9">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="Notes" AcceptsReturn="True" FontFamily="Consolas" Padding="10,10,10,10"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="(" VerticalAlignment="Center" FontSize="18"/>
                    <TextBox VerticalAlignment="Center"/>
                    <TextBlock Text="+" VerticalAlignment="Center" FontSize="18"/>
                    <TextBox VerticalAlignment="Center"/>
                    <TextBlock Text=")(" VerticalAlignment="Center" FontSize="18"/>
                    <TextBox VerticalAlignment="Center"/>
                    <TextBlock Text="+" VerticalAlignment="Center" FontSize="18"/>
                    <TextBox VerticalAlignment="Center"/>
                    <TextBlock Text=")" VerticalAlignment="Center" FontSize="18"/>
                </StackPanel>
                <ComboBox Grid.Column="2" VerticalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem Content="FOIL"/>
                    <ComboBoxItem Content="Factor"/>
                </ComboBox>
                <Button Grid.Column="3" Content="⁕" Padding="3,0,3,0" VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" MinWidth="100" Orientation="Vertical" Spacing="9">
            <StackPanel x:Name="Inputs" Orientation="Horizontal" Spacing="9" HorizontalAlignment="Center"/>
            <Button x:Name="CalcBtn" Click="Update" Content="𝑓" HorizontalAlignment="Stretch" Padding="0,0,0,3"/>
            <TextBlock x:Name="Output" FontFamily="Consolas" FontSize="16" Text="..."/>
            <ProgressRing x:Name="OutputProgress" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
